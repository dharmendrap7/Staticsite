@model Conquerorhub.Models.EventDetailsViewModel
@{
    ViewBag.Title = "EventDetails";
    Layout = "~/Views/Shared/_WinkuRegisteredParticipantLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.jqueryui.min.css">
<script src="~/Content/WinkuTemplate/js/main.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.jqueryui.min.js"></script>



<div class="col-lg-12">
    <div class="central-meta">
        <div class="editing-info">
            <h5 class="f-title"><i class="ti-info-alt"></i>Event details</h5>
          
           
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                  

                        <thead> <tr> <th>Organizer</th> <th>Event Name</th> <th>Event type</th><th>Event Sub Type</th> <th>Action</th> </tr> </thead>
                   

                    <tbody>
                        @if (Model.eventDetails != null || Model.EventSubType != null)
                        {
                        for (int i = 0; i < Model.eventDetails.Count; i++)
                        {

                            <tr>
                                <td>@Model.eventDetails[i].NameofOrganizer</td>
                                <td>@Model.eventDetails[i].EventName</td>
                                <td>@Model.eventDetails[i].TypeOfEvent</td>
                                <td>@Model.EventSubType[i]</td>
                               
                               
                                    <td>
                                        
                                            <a href="@Url.Action("EventDetailsToParticipants", "Events", new { id = Model.eventDetails[i].EventId, UserId = Model.eventDetails[i].OrganizerId })" class="btn btn-default" type="button">Click here for more info</a>
                                          
                                        
                                       
                                    </td>
                                





                             
                            </tr>
                        }
                        }

                    </tbody>



                </table>
            

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        debugger;
        $('#example').DataTable();
    });
</script>


